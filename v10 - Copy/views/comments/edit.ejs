<%- include("../partials/header") %>
<div class="container my-3">
    <div class="row">
        <h1 class="col-12 text-center">Edit Comment</h1>

        <form class="col-7 col-md-5 mx-auto my-3" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="comment[text]">Comment</label>
                <textarea class="form-control" name="comment[text]" id="name" rows="5"><%= comment.text %></textarea>
                <!-- <input class="form-control" id="comment" type="text" placeholder="That campsite looks superb! Definitely going to have to try it out." name="comment[text]"> -->
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Submit</button>
            </div>
            <a href="/campgrounds">Go Back</a>
        </form>       
    </div>
</div>
<%- include("../partials/footer") %>