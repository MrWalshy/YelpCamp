<%- include("../partials/header") %>
<div class="container my-3">
    <div class="row">
        <h1 class="col-12 text-center">Create a New Campground</h1>

        <form class="col-7 col-md-5 mx-auto my-3" action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" id="name" type="text" placeholder="Enter Campground Name" name="name">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" id="price" type="number" placeholder="Enter Campground Price" name="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input class="form-control" type="text" placeholder="Enter Image URL" name="image">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" placeholder="Enter Description" name="description">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Submit</button>
            </div>
            <a href="/campgrounds">Go Back</a>
        </form>       
    </div>
</div>

<%- include("../partials/footer") %>