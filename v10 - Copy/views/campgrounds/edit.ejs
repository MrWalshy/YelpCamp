<%- include("../partials/header") %>
<div class="container my-3">
    <div class="row">
        <h1 class="col-12 text-center">Edit <%= campground.name %></h1>

        <form class="col-7 col-md-5 mx-auto my-3" action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
            <div class="form-group">
                <label for="nameInput">Name</label>
                <input class="form-control" id="name" type="text" value="<%= campground.name %>" name="campground[name]" required>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" id="price" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="imageInput">Image</label>
                <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]" required>
            </div>
            <div class="form-group">
                <label for="descriptionInput">Description</label>
                <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Submit</button>
            </div>
            <a href="/campgrounds">Go Back</a>
        </form>       
    </div>
</div>

<%- include("../partials/footer") %>