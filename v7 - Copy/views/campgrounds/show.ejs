<%- include("../partials/header.ejs") %>
<div class="container my-3">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 1</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img src="<%= campground.image %>" alt="" class="card-img-top rounded-0">
                <div class="card-header">
                    <div class="container p-0">
                        <div class="row">
                            <div class="col-8 col-sm-9 ">
                                <h2 class="m-0"><a href="#"><%= campground.name %></a></h2>
                            </div>
                            <div class="col-3 col-sm-2 my-auto ml-auto p-0">
                                <p class="m-0 p-0 card-title">Â£8.80pp</p>
                            </div>
                        </div>
                    </div>   
                </div>
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 p-0">
                                <p class="m-0"><%= campground.description %></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-0">
                    <div class="container mt-3">
                        <div class="row">
                            <div class="col-12 text-right">
                                <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">New Comment</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 p-0">
                                <hr>
                            </div>
                        </div>
                        <% campground.comments.forEach(function(comment){ %>
                            <div class="row">
                                <div class="col-6">
                                    <p class="mb-2">
                                        <strong><%= comment.author.username %></strong>   
                                    </p>   
                                </div>
                                <div class="col-6 text-right">
                                    <span>5 days ago</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <p class="border-bottom border-dark p-1 rounded">
                                        <%= comment.text %>
                                    </p>
                                </div>
                            </div>   
                        <% }) %>
                    </div>
                </div>
            </div>
            
            
        </div>
    </div>
</div>

<%- include("../partials/footer.ejs") %>